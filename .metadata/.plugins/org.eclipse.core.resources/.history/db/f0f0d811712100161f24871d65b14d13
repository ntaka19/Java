//a box containing a tea
class TeaBox {
  Tea content;

  TeaBox(Tea content) {
    this.content = content;
  }
  //to take the content out from this box
  Tea get() {
    return content;
  }
  //to swap the content in this box with the one in that box
  void swap(TeaBox that) {
    Tea c = this.content;
    this.content = that.content;
    that.content = c;
  }
}
